<!DOCTYPE html>
<html style="height: 100%;">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Likey
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link href="https://bootswatch.com/4/lux/bootstrap.min.css" rel="stylesheet">
			<script src="https://js.stripe.com/v3/"></script>
			<link rel="stylesheet" href="{{ asset('css/home.css') }}"/>


			<script src="https://js.stripe.com/v3/"></script>
		{% endblock %}
	</head>

	<body class="d-flex flex-column justify-content-between" style="min-height: 100%;">
		{% if app.user %}
			<div style="min-height: 640px;">
				<div x-data="{ open: false }" @keydown.window.escape="open = false" class="flex h-screen overflow-hidden bg-gray-100">
					{% include "shared/_bar_user.html.twig" %}
					<div x-init="$el.focus()" class="flex-1 overflow-auto focus:outline-none" tabindex="0">
						{% include "shared/_navbar_user.html.twig" %}
						<main class="relative z-0 flex-1 pb-8">
							{% for label,messages in app.flashes %}
								<div class="toast" style="position: absolute;z-index:1; right:0;" data-delay="3000">
									<div class=" alert alert-{{ label }}" style="margin-bottom:unset">
										{% for message in messages %}
											<p>{{ message }}</p>
										{% endfor %}
									</div>
								</div>
							{% endfor %}
							{% block body %}{% endblock %}
						</main>
					</div>
				</div>
			</div>
		{% else %}
			{% include "shared/_navbar.html.twig" %}
			<div class="container pt-5" style="min-height: calc(100vh - 70px);">
				{{ block('body') }}
			</div>
			{% include "shared/_footer.html.twig" %}
		{% endif %}
	</body>

	{% block javascripts %}
		{{ encore_entry_script_tags('app') }}

		<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
		<script>
			$(document).ready(function () {
$('.toast').toast('show');
});
		</script>
	{% endblock %}
</html>
