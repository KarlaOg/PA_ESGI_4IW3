{% extends 'base.html.twig' %}


{% block title %}
	Editer une offre
{% endblock %}


{% block body %}
	<div class="container pt-5">
		<div class="space-y-6 sm:px-6 lg:px-0 lg:col-span-9">
			<section aria-labelledby="payment_details_heading">
				<div class="shadow sm:rounded-md sm:overflow-hidden">
					<div class="px-4 py-6 bg-white sm:p-6">
						<h2 class="pb-5">
							Editer une offre</h2>
						{{ form_start(form) }}
						{{ form_row(form.name) }}
						{{ form_row(form.description) }}
						{{ form_row(form.field) }}
						{{ form_row(form.dateStart) }}
						{{ form_row(form.dateEnd) }}
						<div class="d-none">
							{{ form_widget(form.brandId) }}
						</div>

						<div style="margin-top:20px">
							<button type="submit" class="mr-3 btn btn-success">Sauvegarder</button>

							<a href="{{ path('offer_show', {'id': offer.id}) }}" class="btn btn-primary">Retour</a>
						</div>
						{{ form_end(form) }}
					</div>
				</div>
			</section>
		</div>
	</div>

{% endblock %}
