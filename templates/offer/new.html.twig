{% extends 'base.html.twig' %}


{% block title %}Ajouter une offre
{% endblock %}


{% block body %}
	<h1>Ajouter une offre</h1>
	<hr>
	{{ form_start(form) }}
	{{ form_row(form.name) }}
	{{ form_row(form.description) }}
	{{ form_row(form.field) }}
	{{ form_row(form.dateStart) }}
	{{ form_row(form.dateEnd) }}
	<div class="d-none">
		{{ form_widget(form.brandId) }}
	</div>
	<div style="margin-top:20px">
		<button type="submit" class="btn btn-success">Cr√©er</button>
		<a href="{{path('offer_index')}}" class="btn btn-primary">Annuler</a>
	</div>
	{{ form_end(form) }}


{% endblock %}
