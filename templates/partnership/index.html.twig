{% extends 'base.html.twig' %}


{% block title %}
	Partenariats
{% endblock %}


{% block body %}
	<h1>Mes partenariats</h1>
	{% if partnerships is empty %}
		<p>Il n'y a pas de partenariats pour le moment. </br> Veuillez d'abords valider des candidatures</p>
	{% endif %}
	{% for partnership in partnerships %}
		<div class="card mb-3">
			<div class="card-body">
				<p>Nom de l'influenceur : 
					<a href="{{ path('influencer_show', {'name': influencers[loop.index0].name}) }}" >{{ influencers[loop.index0].name }}
					</a>
				 </p>
				<p>Nom de l'offre: {{ partnership.name }} </p>
				<p>Description de l'offre: {{ partnership.description }} </p>
			</div>
		</div>
	{% endfor %}
{% endblock %}
