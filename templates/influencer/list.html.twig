{% extends 'base.html.twig' %}

{% block title %} Tous les influencers
{% endblock %}

{% block body %}
<main class="hidden xl:order-first xl:flex xl:flex-col flex-shrink-0 w-96 border-r border-gray-200">
            <h2 class="text-lg font-medium text-gray-900">Annuaire</h2>
          <!--  Liste  -->
          <nav class="flex-1 min-h-0 relative overflow-y-auto" aria-label="Annuaire">
            

              <ul class="relative z-0 divide-y divide-gray-200">
                
                {% for influencer in influencers %}
                  <li>
                    <div class="relative px-6 py-5 flex items-center space-x-3 hover:bg-gray-50 focus-within:ring-2 focus-within:ring-inset focus-within:ring-pink-500">
                      <div class="flex-shrink-0">
                        <img class="h-10 w-10 rounded-full" src={{influencer.imageFile ? influencer.imageFile : "https://images.unsplash.com/photo-1504703395950-b89145a5425b?ixlib=rb-1.2.1&amp;ixid=eyJhcHBfaWQiOjEyMDd9&amp;auto=format&amp;fit=facearea&amp;facepad=2&amp;w=256&amp;h=256&amp;q=80"}} alt="">
                      </div>
                      <div class="flex-1 min-w-0">
                        <a href="{{ path('influencer_show', {'name': influencer.name}) }}" class="focus:outline-none">
                          <!-- Extend touch target to entire panel -->
                          <span class="absolute inset-0" aria-hidden="true"></span>
                          <p class="text-sm font-medium text-gray-900">
                            {{influencer.name}}
                          </p>
                          <p class="text-sm text-gray-500 truncate">
                            {{influencer.description}}
                          </p>
                        </a>
                      </div>
                    </div>
                   </li>
              {% endfor %}
              </ul>   

          </nav>
        </main>
{% endblock %}