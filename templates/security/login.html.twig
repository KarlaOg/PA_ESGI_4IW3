{% extends 'base-no-user.html.twig' %}

{% block title %}Se connecter
{% endblock %}
{% block body %}
	<div class="p-5 mx-auto rounded shadow card form-login">
		<form action="{{ path('app_login') }}" method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<h3>Connectez-vous</h3>
			<br>
			<label for="inputEmail">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
			<label for="inputPassword">Mot de passe</label>
			<input type="password" name="password" id="inputPassword" class="form-control" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<br>
			<button class="inline-block px-6 py-2 text-xs font-medium leading-6 text-center text-white uppercase transition bg-indigo-500 rounded shadow ripple hover:shadow-lg hover:bg-indigo-600 focus:outline-none waves-effect" type="submit">
				Se connecter
			</button>
		</form>
	</div>
{% endblock %}
