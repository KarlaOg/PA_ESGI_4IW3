{% extends 'base.html.twig' %}

{% block title %}Profil de
	{{ app.user.firstname }}
	{{ app.user.lastname }}
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/account.css') }}">
{% endblock %}

{% block body %}
	<main class="max-w-7xl mx-auto pb-10 lg:py-12 lg:px-8">
		{% for message in app.flashes('error') %}
			<div class="col-xs4">
				<div class="p-3 my-2 rounded-2 error">{{message}}</div>
			</div>
		{% endfor %}
		<div class="lg:grid lg:grid-cols-12 lg:gap-x-5">
			<aside class="py-6 px-2 sm:px-6 lg:py-0 lg:px-0 lg:col-span-3">
				<nav class="space-y-1">


					<a href="{{ path('users_complete') }}" class="text-gray-900 hover:text-gray-900 hover:bg-gray-50 group rounded-md px-3 py-2 flex items-center text-sm font-medium">
						<svg class="text-gray-400 group-hover:text-gray-500 flex-shrink-0 -ml-1 mr-3 h-6 w-6" x-description="Heroicon name: outline/user-circle" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor" aria-hidden="true">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
						<span class="truncate">
							Profile
						</span>
					</a>


					<a href="{{ path('users_edit') }}" class="text-orange-600 hover:text-gray-900 hover:bg-gray-50 group rounded-md px-3 py-2 flex items-center text-sm font-medium">
						<svg class="text-orange-500 group-hover:text-gray-500 flex-shrink-0 -ml-1 mr-3 h-6 w-6" x-description="Heroicon name: outline/cog" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor" aria-hidden="true">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
						</svg>
						<span class="truncate">
							Account
						</span>
					</a>


					<a href="{{ path('users_pass_modifier') }}" class="text-gray-900 bg-gray-50  hover:bg-white group group rounded-md px-3 py-2 flex items-center text-sm font-medium">
						<svg class="text-gray-400 group-hover:text-gray-500 flex-shrink-0 -ml-1 mr-3 h-6 w-6" x-description="Heroicon name: outline/key" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor" aria-hidden="true">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
						</svg>
						<span class="truncate">
							Mot de passe
						</span>
					</a>
				</nav>
			</aside>

			<div class="space-y-6 sm:px-6 lg:px-0 lg:col-span-9">
				<section aria-labelledby="payment_details_heading">

					<div class="shadow sm:rounded-md sm:overflow-hidden">
						<div class="bg-dark py-6 px-4">
							<p>Gestion du profil</p>
						</div>
						<div class="py-6 px-4 sm:p-6">
							<form action="#" method="POST">

								<h4>Modifier mon profil</h4>
								{{ form_start(form) }}
								{{ form_widget(form) }}
								<button type="submit" class="btn btn-primary mt-3">Sauvegarder</button>
								{{ form_end(form) }}
							</form>
						</div>
						<div class="py-6 px-4 sm:p-6">
							<h4>Suppimer mon profil</h4>
							{{ include('users/deleteProfile.html.twig') }}
						</div>

					</section>
				</div>
			</div>


		</main>
	{% endblock %}
