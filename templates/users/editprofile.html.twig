{% extends 'base.html.twig' %}

{% block title %}Profil de
	{{ app.user.firstname }}
	{{ app.user.lastname }}
{% endblock %}

{% block body %}
	<main class="pb-10 mx-auto max-w-7xl lg:py-12 lg:px-8">
		{% for message in app.flashes('error') %}
			<div class="col-xs4">
				<div class="p-3 my-2 rounded-2 error">{{message}}</div>
			</div>
		{% endfor %}

		<div class="space-y-6 bg-white sm:px-6 lg:px-0 lg:col-span-9">
			<div class="shadow sm:rounded-md sm:overflow-hidden">
				<div class="px-4 py-6 sm:p-6">
					<h3 class="mb-4">Modifier mes informations</h3>
					{{ form_start(form) }}
					{{ form_widget(form) }}
					<button type="submit" class="mt-3 btn btn-primary">Sauvegarder</button>
					{{ form_end(form) }}
				</div>
				<div class="px-4 py-6 sm:p-6">
					{{ include('users/deleteProfile.html.twig') }}
				</div>
			</div>
		</div>
	</main>
{% endblock %}
