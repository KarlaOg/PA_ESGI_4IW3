{% extends 'base.html.twig' %}

{% block title %}Bienvenu sur LIKEY !
{% endblock %}
{% block body %}

	<div class="jumbotron bg-cover">
		<div class="container py-5 text-center">
			<h1 class="display-4 font-weight-bold">Bienvenue sur
				<i>LIKEY</i>
			</h1>
			<p class="font-italic mb-0">LIKEY met en relation des influenceurs et des marques dans le but de créer un partenariat.</p>
			<p>Commencez déjà par vous inscrire pour voir les offres disponibles !</p>
		</p>
		<a href="{{path('register_index')}}" role="button" class="btn btn-primary px-5">Voir les ofrres</a>
	</div>
</div>

<!-- card offres : 4 dernières offres affichées -->
<h3 class="header-text-h3">Dernières offres publiées</h3>

<div class="flex items-center justify-center mt-4">
	<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 xl:grid-cols-4">
		{% for offer in offers  %}
			<!-- card offert-->
			<div class="relative bg-white py-6 px-6 rounded-3xl w-64 my-4 shadow-xl">
				<div
					class=" text-white flex items-center absolute rounded-full py-4 px-4 shadow-xl bg-blue-500 left-4 -top-6 mb-4">
					<!-- svg  -->
					<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewbox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
					</svg>
				</div>
				<div class="mt-8 mb-4">
					<p class="text-xl font-semibold my-2">{{ offer.name|capitalize }}</p>
					<div
						class="flex space-x-2 text-gray-400 text-sm">
						<!-- svg  -->
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
						</svg>
						<p>{{ offer.field ? offer.field|join(', ') : null}}</p>
					</div>
					<div
						class="flex space-x-2 text-gray-400 text-sm my-3">
						<!-- svg  -->
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
						</svg>
						<p>
							Début
							{{ offer.dateStart ? offer.dateStart|date('d/m/Y') : 'NC'}}
						</p>
					</div>

					<div
						class="flex space-x-2 text-gray-400 text-sm my-3">
						<!-- svg  -->
						<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
						</svg>
						<p>
							Fin
							{{ offer.dateStart ? offer.dateEnd|date('d/m/Y') : 'NC'}}
						</p>
					</div>

					<div class="border-t-2 "></div>

					<div class="flex justify-between">
						<div class="my-2">
							<p class="font-semibold text-base mb-2">Description</p>
							<div class="flex space-x-2">
								<p>
									{{ offer.description ? offer.description|slice(0, 80) : 'NC'}}
									...
								</p>
							</div>
						</div>
					</div>
				</div>

				<div class="border-t-2 mb-2"></div>

				<div>
					<pclass="font-semiboldtext-basemb-2">Accéder à l'offre</p>
					{% if not app.user %}
						<a class="ml-3 btn btn-secondary" href="{{path('app_login')}}">
							Se connecter
						</a>
					{% else %}
						{% for role in app.user.roles %}
							{% if role == "ROLE_INFLUENCEUR" %}
								<a href="{{ path('offer_show', {'id': offer.id}) }}" class="waves-effect waves-light btn btn-primary">Voir l'offre</a>
							{% endif %}
						{% endfor %}
					{% endif %}
				</div>
			</div>
		{% endfor %}
	</div>
</div>

