{% extends 'base-no-user.html.twig' %}

{% block title %}
	Likey - Inscription Marque
{% endblock %}


{% block body %}
	<div class="bg-white">
		<div class="mx-auto ">
			<nav class="flex items-center justify-center" aria-label="Progress">
				<p class="text-sm font-medium">Étape 2 sur 2</p>
				<ol class="flex items-center ml-8 space-x-5">

					<li>

						<a href="#" class="block w-2.5 h-2.5 bg-indigo-600 rounded-full hover:bg-indigo-900">
							<span class="sr-only">Étape 1</span>
						</a>
					</li>

					<li>

						<a href="#" class="relative flex items-center justify-center" aria-current="step">
							<span class="absolute flex w-5 h-5 p-px" aria-hidden="true">
								<span class="w-full h-full bg-indigo-200 rounded-full"></span>
							</span>
							<span class="relative block w-2.5 h-2.5 bg-indigo-600 rounded-full" aria-hidden="true"></span>
							<span class="sr-only">Step 2</span>
						</a>
					</li>
				</ol>
			</nav>
		</div>
	</div>
	<main class="pb-10 mx-auto max-w-7xl lg:py-12 lg:px-8">
		{% for message in app.flashes('error') %}
			<div class="col-xs4">
				<div class="p-3 my-2 rounded-2 error">{{message}}</div>
			</div>
		{% endfor %}

		<div class="space-y-6 sm:px-6 lg:px-0 lg:col-span-9">
			<section aria-labelledby="payment_details_heading">
				<div class="shadow sm:rounded-md sm:overflow-hidden">
					<div class="px-4 py-6 bg-white sm:p-6">
						{% for message in app.flashes('error') %}
							<div class="col-xs4">
								<div class="p-3 my-2 rounded-2 error">{{message}}</div>
							</div>
						{% endfor %}
						<h3>Mon profil</h3>

						{{ form_start(formView, {'multipart':'true'}) }}
						{{form_errors(formView)}}
						<div class="row">
							<div class="col">
								{{form_row(formView.name)}}
								{{form_row(formView.imageFile)}}
								{{form_row(formView.username)}}
								{{form_row(formView.description)}}
								{{form_row(formView.siret)}}
								{{form_row(formView.field)}}
							</div>
							<div class="col">
								{{form_row(formView.website)}}
								{{form_row(formView.instagram)}}
								{{form_row(formView.facebook)}}
								{{form_row(formView.youtube)}}
								{{form_row(formView.twitter)}}
								{{form_row(formView.twitch)}}
								{{form_row(formView.tiktok)}}
							</div>
						</div>

						<button type="submit" class="btn btn-primary">
							Sauvegarder</button>

						{{form_end(formView)}}
					</div>
				</section>
			</div>
		</div>
	</main>
{% endblock %}
{% block javascripts %}
	{{parent()}}
	<script>
		$.fn.previewImage = function () {
$(this).change(function (e) {
var url = URL.createObjectURL(e.target.files[0]);
$(this).parents('.vich-image').children('img').remove();
$(this).parents('.vich-image').prepend('<img class="preview_image" src="' + url + '"/>');
})
}
$('#brand_imageFile_file').previewImage();
$('#brand_imageFile_file').previewImage();
	</script>
{% endblock %}
