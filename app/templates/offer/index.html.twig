{% extends 'base.html.twig' %} 

{% block title %}Liste des offres {% endblock %}
 

{% block body %}
    <h1>Liste des offres</h1>
 <a href="{{ path('offer_new') }}" class="btn btn-success">Ajouter une offre</a> <br><br>

<div class = "table-responsive">
    <table class="table">
        {% for offer in offers  %}
            <tr>
                <td> Titre : {{ offer.name|capitalize }} </td>
            </tr>
            <tr>
                <td>Dates : {{ offer.dateStart ? offer.dateStart|date('m/d/Y') : 'NC'}} - {{ offer.dateEnd ? offer.dateEnd|date('m/d/Y') : 'NC'}} </td>
            </tr>
            <tr>
                <td>Description : {{ offer.decription ? offer.decription|slice(0, 50) : 'NC'}} </td>
            </tr>
            <tr>
            <td><a href="{{ path('offer_show', {'id': offer.id}) }}" class="btn btn-warning">Voir l'offre</a></td>
            </tr>
        {% endfor %}
    </table>
 </div>  
{% endblock %}