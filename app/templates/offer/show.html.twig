{% extends 'base.html.twig' %}

{% block title %}Modifier une offre
{% endblock %}

{% block body %}

	<h3>{{ offer.name|capitalize }}</h3>
	<div class="card brown lighten-5">
		<div class="card-content">
			<span class="card-title">{{ offer.name|capitalize }}
			</span>
			<p>Description :
				{{ offer.decription ? offer.decription|slice(0, 50) : 'NC'}}
			</p>
			<p>Dates :
				{{ offer.dateStart ? offer.dateStart|date('m/d/Y') : 'NC'}}
				-
				{{ offer.dateEnd ? offer.dateEnd|date('m/d/Y') : 'NC'}}
			</p>
			{# <p>Cr√©er par
																																																																<b>{{brand.name}}</b>
																																																															</p> #}

		</div>
		<div class="card-action">
			{% if app.user.roles[0] == "ROLE_INFLUENCEUR" %}
				<a href="{{ path('offer_apply', {'id': offer.id}) }}" class="btn green">Postuler</a>
			{% endif %}
			{% if app.user.roles[0] == "ROLE_MARQUE" %}
				{% if offer.brandId.id == app.user.id  %}
					<a href="{{ path('offer_edit', {'id': offer.id}) }}" class="btn blue">Modifier l'offre</a>
					<a href="{{ path('offer_delete', {'id': offer.id, 'token': csrf_token('delete_offer' ~ offer.id)}) }}" class="btn red">Supprimer l'offre</a>
				{% endif %}
			{% endif %}
		</div>
	</div>
	<a href="{{ path('offer_index') }}" class="btn btn-primary">Toutes les offres</a>

{% endblock %}
