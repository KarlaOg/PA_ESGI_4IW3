		<body>
			<div class="container"> {% block body %}{% endblock %}
				</div>
				{% block javascripts %}
						{{ encore_entry_script_tags('app') }}
				{% endblock %}
					<script>
						document.addEventListener('DOMContentLoaded', function() {
							{% for label, messages in app.flashes %}
