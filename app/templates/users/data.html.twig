{% extends 'base.html.twig' %}


{% block body %}

	<div class="row">
		<div class="col s6">
			<h4>
				Mon profil:</h4>
			<div class="card brown lighten-5 z-depth-2">
				<div class="card-content black-text">
					{% if  app.user.imageUser %}
						<div class="card-image">
							<img src="{{ vich_uploader_asset(app.user, 'imageFile') }}" alt="{{ app.user.imageUser }}"/>
							{% else %}
						{% endif %}

					</td>
				</div>
				<span class="card-title">{{ app.user.lastname }}
					{{ app.user.firstname }}
				</span>
				<p>
					{{ app.user.lastname }}</p>
				<p>{{ app.user.firstname }}</p>
				<p>{{ app.user.email }}</p>
				{% if app.user.roles[0] == 'ROLE_INFLUENCEUR'%}
					<i>Influenceur</i>
				{% elseif app.user.roles[0] == 'ROLE_MARQUE' %}
					<i>Marque</i>
				{% endif %}
			</div>
			<div class="card-action">
				<button class="btn waves-effect waves-light" type="submit" name="action">
					<a class="white-text" type="submit" href="{{path('users_profil_modifier')}}">Modifier</a>
				</button>
			</div>
		</div>
