{% extends 'base.html.twig' %}


{% block body %}

	<div class="row">
		<div class="col s6">
			<h4>
				Mon profil:</h4>
			<div class="card brown lighten-5 z-depth-2">
				<div class="card-content black-text">
					{% if  app.user.imageUser %}
						<div class="card-image">
							<img src="{{ app.user.imageUser }}">
						{% endif %}
					</td>
				</div>
				<span class="card-title">{{ app.user.lastname }}
					{{ app.user.firstname }}
				</span>
				<p>
					{{ app.user.lastname }}</p>
				<p>{{ app.user.firstname }}</p>
				<p>{{ app.user.email }}</p>
				{% if app.user.roles[0] == 'ROLE_INFLUENCEUR'%}
					<i>Influenceur</i>
				{% elseif app.user.roles[0] == 'ROLE_MARQUE' %}
					<i>Marque</i>
				{% endif %}
			</div>
			<div class="card-action">
				<button class="btn waves-effect waves-light" type="submit" name="action">
					<a class="white-text" type="submit" href="{{path('users_profil_modifier')}}">Modifier</a>
				</button>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col s6">
			<h4>
				Mes offres:</h4>
			<div class="card brown lighten-5 z-depth-2">
				<div class="card-content black-text">
					{% if  app.user.imageUser %}
						<div class="card-image">
							<img src="{{ app.user.imageUser }}">
						{% endif %}
					</td>
				</div>
				<span class="card-title">{{ app.user.lastname }}
					{{ app.user.firstname }}
				</span>
				<p>
					{{ app.user.lastname }}</p>
				<p>{{ app.user.firstname }}</p>
				<p>{{ app.user.email }}</p>
				{% if app.user.roles[0] == 'ROLE_INFLUENCEUR'%}
					<i>Influenceur</i>
				{% elseif app.user.roles[0] == 'ROLE_MARQUE' %}
					<i>Marque</i>
				{% endif %}
				<pre>
					{{ dump(app.user) }}
					{{ dump(offers) }}
				</pre>
			</div>
			<div class="card-action">
				<button class="btn waves-effect waves-light" type="submit" name="action">
					<a class="white-text" type="submit" href="{{path('users_profil_modifier')}}">Voir mes offres</a>
				</button>
			</div>
		</div>
	</div>


	<ul class="list-group mb-8">
		<li class="list-group-item active">Données personnelles de
			<b>{{ app.user.firstname }}
				{{ app.user.lastname }}</b>
		</li>
		<li class="list-group-item">Nom :
			<i>{{ app.user.lastname }}</i>
		</li>
		<li class="list-group-item">Prénom :
			<i>{{ app.user.firstname }}</i>
		</li>
		<li class="list-group-item">Email :
			<i>{{ app.user.email }}</i>
		</li>
		<li class="list-group-item">Rôle :
			{% if app.user.roles[0] == 'ROLE_INFLUENCEUR'%}
				<i>Influenceur</i>
			{% elseif app.user.roles[0] == 'ROLE_MARQUE'%}
				<i>Marque</i>
			{% endif %}
		</li>
		<pre>
				{{ dump(app.user) }}
			</pre>
	</ul>
	<button type="button" class="btn btn-outline-success m-4">
		<a class="nav-link" href="{{path('users_profil_modifier')}}">Modifier mon profil</a>
	</button>
</li></div>{% endblock %}
