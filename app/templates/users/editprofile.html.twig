{% extends 'base.html.twig' %}

{% block title %}Modification du profil de
	{{ app.user.firstname }}
	{{ app.user.lastname }}
{% endblock %}

{% block body %}
	<div class="grix xs4 container">
		<div class="col-xs4">
			<h3>Modification du profil de
				{{ app.user.firstname }}
				{{ app.user.lastname }}</h3>
			
			
			{{ form_start(form) }}
			{{ form_row(form) }}
				<img src="{{ vich_uploader_asset(app.user, 'imageFile') }}" alt="{{ app.user.lastname }}" />
				
				<button type="submit" class="btn btn-success">Sauvegarder</button>
			{{ form_end(form) }}
			</div>

		</div>
		<div>
			<button type="button" class="btn white">
				<a href="{{path('users_pass_modifier')}}">Edit password</a>
			</button>
		</div>
	{% endblock %}
